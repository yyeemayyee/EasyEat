<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Easyeat.MainPage">
    <StackLayout  Orientation="Vertical" Padding="20,20,20,20">
            <Entry x:Name="loginField" Placeholder="Enter Login" />
            <Entry x:Name="passField" Placeholder="Enter Password" />
            <Entry x:Name="emailField" Placeholder="Enter Email" />
            <Button Text="Sign in" Clicked="Button_SighIn"/>
            <Button Text="Registration" Clicked="Button_Registration"/>
        </StackLayout>
</ContentPage>
    
    
